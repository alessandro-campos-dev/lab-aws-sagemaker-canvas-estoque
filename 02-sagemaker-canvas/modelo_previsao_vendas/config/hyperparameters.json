{
  "xgboost_params": {
    "objective": "reg:squarederror",
    "booster": "gbtree",
    "eta": 0.095,
    "gamma": 0.1,
    "max_depth": 7,
    "min_child_weight": 3,
    "subsample": 0.85,
    "colsample_bytree": 0.75,
    "lambda": 1.2,
    "alpha": 0.5,
    "tree_method": "hist",
    "grow_policy": "lossguide",
    "eval_metric": ["rmse", "mae"],
    "seed": 42
  },
  
  "training_params": {
    "num_boost_round": 200,
    "early_stopping_rounds": 20,
    "verbose_eval": 10
  },
  
  "feature_engineering": {
    "lags": [1, 7],
    "rolling_windows": [3, 7],
    "date_features": ["day_of_week", "is_weekend", "month"],
    "categorical_features": ["ID_PRODUTO"],
    "numerical_features": ["QUANTIDADE_ESTOQUE", "FLAG_PROMOCAO"]
  }
}